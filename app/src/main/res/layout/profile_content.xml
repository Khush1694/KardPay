<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context=".MainActivity">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="@dimen/card_margin">
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="?android:selectableItemBackground">

        <ImageView
            android:id="@+id/github"
            android:layout_width="100dp"
            android:layout_height="100dp"

            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_gravity="left"
            android:src="@drawable/github_logo" />


        <TextView
            android:id="@+id/name1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/github"
            android:layout_marginTop="8dp"
            android:padding="@dimen/text_padding"

            android:textAppearance="@style/TextAppearance.AppCompat.Title" />
        <TextView
            android:id="@+id/contact_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/text_padding"
            android:layout_below="@+id/name1"
            android:layout_toRightOf="@+id/github"
            android:paddingBottom="@dimen/text_padding"

            android:textSize="16sp"
            />


      </RelativeLayout>




    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_margin">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground">

          <TextView
              android:id="@+id/account"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="10dp"
              android:paddingLeft="16dp"
              android:paddingRight="16dp"

              android:text="Account"
              android:layout_gravity="left"
              android:textAppearance="@style/TextAppearance.AppCompat.Title" />

          <TextView
              android:id="@+id/email_text"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingLeft="@dimen/text_padding"
              android:paddingRight="@dimen/text_padding"
              android:paddingBottom="@dimen/text_padding"
              android:layout_below="@+id/account"
              android:layout_gravity="left"
              />
          <Button
              android:id="@+id/update"
              android:layout_width="130dp"
              android:layout_height="40dp"
              android:gravity="center"
              android:layout_gravity="center_horizontal"
             android:layout_alignParentRight="true"
              android:layout_marginTop="16dp"
              android:layout_marginRight="16dp"

              android:background="@drawable/button_animation_white"
              android:text="Update"

              android:textSize="@dimen/songs_count"
              android:textColor="#000"
              />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground">

          <ImageView
              android:id="@+id/name_image"
              android:layout_width="60dp"
              android:layout_height="60dp"
              android:paddingTop="10dp"
              android:paddingLeft="16dp"
              android:paddingRight="16dp"
              android:layout_gravity="left"
              android:src="@drawable/call_icon" />


          <TextView
              android:id="@+id/name"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_toRightOf="@+id/name_image"

              android:padding="@dimen/text_padding"
              android:text="Name"
              android:textAppearance="@style/TextAppearance.AppCompat.Title" />
          <TextView
              android:id="@+id/name_text"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingLeft="@dimen/text_padding"
              android:layout_below="@+id/name"
              android:layout_toRightOf="@+id/name_image"
              android:paddingBottom="@dimen/text_padding"

              android:textSize="16sp"
              />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground">

          <ImageView
              android:id="@+id/card_image"
              android:layout_width="60dp"
              android:layout_height="60dp"
              android:paddingTop="40dp"

              android:paddingLeft="16dp"
              android:paddingRight="16dp"
              android:layout_gravity="left"
              android:src="@drawable/credit_card" />


          <TextView
              android:id="@+id/card"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_toRightOf="@+id/card_image"
              android:layout_marginTop="16dp"
              android:padding="@dimen/text_padding"
              android:text="Card Detail"
              android:textAppearance="@style/TextAppearance.AppCompat.Title" />
          <TextView
              android:id="@+id/card_text"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingLeft="@dimen/text_padding"
              android:layout_below="@+id/card"
              android:layout_toRightOf="@+id/card_image"
              android:paddingBottom="@dimen/text_padding"

              android:textSize="16sp"
              />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground">

          <ImageView
              android:id="@+id/gender_image"
              android:layout_width="60dp"
              android:layout_height="60dp"
              android:paddingTop="40dp"

              android:paddingLeft="16dp"
              android:paddingRight="16dp"
              android:layout_gravity="left"
              android:src="@drawable/gender" />


          <TextView
              android:id="@+id/gender"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_toRightOf="@+id/gender_image"
              android:layout_marginTop="16dp"
              android:padding="@dimen/text_padding"
              android:text="Gender"
              android:textAppearance="@style/TextAppearance.AppCompat.Title" />
          <TextView
              android:id="@+id/gender_text"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingLeft="@dimen/text_padding"
              android:layout_below="@+id/gender"
              android:layout_toRightOf="@+id/gender_image"
              android:paddingBottom="@dimen/text_padding"

              android:textSize="16sp"
              />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground">

          <ImageView
              android:id="@+id/dob_image"
              android:layout_width="60dp"
              android:layout_height="60dp"
              android:paddingTop="40dp"

              android:paddingLeft="16dp"
              android:paddingRight="16dp"
              android:layout_gravity="left"
              android:src="@drawable/dob" />


          <TextView
              android:id="@+id/dob"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_toRightOf="@+id/dob_image"
              android:layout_marginTop="16dp"
              android:padding="@dimen/text_padding"
              android:text="Birthday"
              android:textAppearance="@style/TextAppearance.AppCompat.Title" />
          <TextView
              android:id="@+id/dob_text"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingLeft="@dimen/text_padding"
              android:layout_below="@+id/dob"
              android:layout_toRightOf="@+id/dob_image"
              android:paddingBottom="@dimen/text_padding"

              android:textSize="16sp"
              />


        </RelativeLayout>


      </LinearLayout>

    </android.support.v7.widget.CardView>



  </LinearLayout>

</ScrollView>
